<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_context"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="60dp"
    android:background="#ed9ef0">

    <Button
        android:id="@+id/button_4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:backgroundTint="#60efff"
        android:paddingHorizontal="20dp"
        android:text="4*4 Oyun Modu" />

    <Button
        android:id="@+id/button_6x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6*6 Oyun Modu"
        android:layout_below="@id/button_4x4"
        android:background="@drawable/button_background"
        android:backgroundTint="#60efff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"/>

</RelativeLayout>